<Window x:Class="EFWithRepoPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFWithRepoPattern"
        xmlns:userCtrls="clr-namespace:EFWithRepoPattern.UserControls"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <StackPanel Orientation="Horizontal">
            <userCtrls:CompanyList Width="200" Margin="10, 25, 5, 25"/>

            <userCtrls:EmployeeList x:Name="EmployeeList" Margin="5, 25, 0, 25"/>

            <Button Width="100" Height="25" Content="Click Me"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
